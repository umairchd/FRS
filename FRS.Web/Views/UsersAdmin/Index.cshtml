@model  IEnumerable<FRS.Web.Models.UserManagement>
@{
    ViewBag.Title = "User Management";
}

@Html.AntiForgeryToken()
@Html.ValidationSummary("", new { @class = "text-danger" })
<div class="row">
    <div class="row">
        <h3 class="page-header float-left pageHeaderSection">Users</h3>
        <div class="header-toolsSection">
            @Html.ActionLink("New", "CreateUser", new { }, new { @class = "label label-default create-new-icon" })
        </div>
    </div>
    <div class="row searchFilterResultSection">
        <div class="well">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th class="col-md-5 th-pointer">Name</th>
                        <th class="col-md-2 th-pointer">Role</th>
                        <th class="col-md-3 th-pointer">Employee</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserRole)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</td>
                        <td style="width: 3%">
                            @*@Html.ActionLink("Details", "ViewUserDetail", new { id = item.Id }, new { @class = 'glyphicon glyphicon-edit' }) |*@
                            @Html.ActionLink(" ", "EditUser", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit pull-right" })
                        </td>
                        <td style="width: 3%">
                            @Html.ActionLink(" ", "DeleteUser", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove pull-right" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
