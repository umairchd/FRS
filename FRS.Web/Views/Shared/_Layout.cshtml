@using Microsoft.AspNet.Identity
@using Cares.Commons

<!DOCTYPE html>
<html lang="@Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture()" dir="@(Cares.Web.Helper.CultureHelper.IsRighToLeft() ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap-" + (Cares.Web.Helper.CultureHelper.IsRighToLeft() ? "rtl/files" : "ltr/files"))

    @Styles.Render("~/Content/css/files")
    @Styles.Render("~/Content/themes/base/css/files")
    <link href="~/Content/jquery-ui-timepicker-addon.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-switch/bootstrap3/bootstrap-switch.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr/files")
    @Scripts.Render("~/bundles/jquery/files")
    @Scripts.Render("~/bundles/jqueryval/files")
    @Scripts.Render("~/Bundle/BaseLibs/files")
    <script src="~/Scripts/jquery-ui-timepicker-addon.js"></script>
    @Scripts.Render("~/Scripts/bootstrap" + (Cares.Web.Helper.CultureHelper.IsRighToLeft() ? "/rtl/files" : "/files"))


    <link href="~/Content/CSS/Global/Plugin/font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CSS/Global/Plugin/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/bootstrap-switch.js"></script>
    <script src="~/Scripts/App/architecture.js"></script>
    <script type="text/javascript">
        var ist = window.ist;
        @{
        <text>
        ist.siteUrl = '@(System.Configuration.ConfigurationManager.AppSettings["SiteURL"].ToString())';
        ist.resourceText.defaultConfirmationText = '@FRS.Web.Resources.Shared.Common.DefaultConfirmationText';
        ist.resourceText.defaultHeaderText = '@FRS.Web.Resources.Shared.Common.Confirmation';
        ist.resourceText.showing = '@FRS.Web.Resources.Shared.Common.Showing';
        ist.resourceText.of = '@FRS.Web.Resources.Shared.Common.Of';
        </text>
    }
    </script>
    <script src="~/Scripts/App/requireConfig.js"></script>
    <script src="~/Scripts/typeahead.bundle.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/MainSite.css" />
    <link rel="shortcut icon" href="~/Resources/Images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Resources/Images/favicon.ico" type="image/x-icon">
</head>
<body class="page-header-fixed page-quick-sidebar-over-content page-footer-fixed page-sidebar-closed">
    <!-- BEGIN HEADER -->
    <div class="page-header navbar navbar-fixed-top">
        <!-- BEGIN HEADER INNER -->
        <div class="page-header-inner">
            <!-- BEGIN LOGO -->
            <div class="page-logo">
                <a href="~/Home/Index">
                    <img src="~/Content/Images/cares-logo-inv.png" alt="logo" class="logo-default" />
                </a>
                <div class="menu-toggler sidebar-toggler hide">
                    <!-- DOC: Remove the above "hide" to enable the sidebar toggler button on header -->
                </div>
            </div>
            <!-- END LOGO -->
            <!-- END HORIZANTAL MENU -->
            <!-- BEGIN HEADER SEARCH BOX -->
            <!-- DOC: Apply "search-form-expanded" right after the "search-form" class to have half expanded search box -->
            <!-- END HEADER SEARCH BOX -->
            <!-- BEGIN RESPONSIVE MENU TOGGLER -->
            <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse">
            </a>
            <!-- END RESPONSIVE MENU TOGGLER -->
            <!-- BEGIN TOP NAVIGATION MENU -->
            <div class="top-menu">
                <ul class="nav navbar-nav pull-right">
                    <!-- BEGIN USER LOGIN DROPDOWN -->
                    <li class="dropdown dropdown-user">
                        @if (@User.Identity.GetUserName() != null && @User.Identity.GetUserName() != "")
                        {
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                <span class="username username-hide-on-mobile">
                                    @if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "en")
                                    {
                                        <span> Hi!</span>
                                    }
                                    else if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "ar")
                                    {
                                        <span>  مرحبا </span>
                                    }

                                    @User.Identity.GetUserName()
                                    <span>[</span>
                                    <span style="color: hsl(46, 49%, 45%)">
                                        @if (@ClaimHelper.GetClaimToString(CaresUserClaims.Role) != null)
                                        {
                                            @ClaimHelper.GetClaimToString(CaresUserClaims.Role).Value
                                        }
                                    </span>
                                    <span>]</span>
                                </span>
                                <i class="fa fa-angle-down"></i>
                            </a>
                        }
                        <ul class="dropdown-menu">
                            <li>
                                <a href="~/Account/Manage">
                                    @if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "en")
                                    {
                                        <i class="icon-calendar"></i> <span>Change Password</span>
                                    }
                                    else if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "ar")
                                    {
                                        <i class="icon-calendar"></i> <span>تغيير كلمة المرور</span>
                                    }
                                </a>
                            </li>
                            @if (User.IsInRole("SystemAdministrator"))
                            {
                                <li>
                                    <a href="~/RolesAdmin/RightsManagement">
                                        @if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "en")
                                        {
                                            <i class="icon-settings"></i> <span>Manage Rights</span>
                                        }
                                        else if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "ar")
                                        {
                                            <i class="icon-calendar"></i><span> إدارة حقوق</span>
                                        }
                                    </a>
                                </li>
                                <li>
                                    <a href="~/RolesAdmin/Index">
                                        @if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "en")
                                        {
                                            <i class="icon-settings"></i> <span>Manage Roles</span>
                                        }
                                        else if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "ar")
                                        {
                                            <i class="icon-calendar"></i><span> إدارة الأدوار</span>

                                        }
                                    </a>
                                </li>

                            }
                            @if (User.IsInRole("SystemAdministrator") || User.IsInRole("Admin"))
                            {

                                <li>
                                    <a href="~/UsersAdmin/Index">
                                        @if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "en")
                                        {
                                            <i class="icon-settings"></i> <span>Manage Users</span>
                                        }
                                        else if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "ar")
                                        {
                                            <i class="icon-calendar"></i> <span>إدارة المستخدمين</span>

                                        }
                                    </a>
                                </li>

                                @*<li>
                                    <a href="~/DashboardAdmin/Manage">
                                        @if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "en")
                                        {
                                            <i class="icon-settings"></i><span> Manage Dashboard</span>
                                        }
                                        else if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "ar")
                                        {
                                            <i class="icon-calendar"></i> <span>إدارة لوحة التحكم الرئيسية</span>

                                        }
                                    </a>
                                </li>*@
                            }
                            <li>
                                <a href="~/Account/LogOff">
                                    @if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "en")
                                    {
                                        <i class="icon-key"></i> <span>Log Out</span>
                                    }
                                    else if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "ar")
                                    {
                                        <i class="icon-calendar"></i><span> تسجيل خروج</span>

                                    }
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- END USER LOGIN DROPDOWN -->
                </ul>

                @* Language Changer *@
                <ul class="nav navbar-nav pull-right">
                    <!-- BEGIN LANGUAGE DROPDOWN -->
                    <li class="dropdown dropdown-user">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                            <i class="glyphicon glyphicon-globe float-left"></i>
                            <span class="username username-hide-on-mobile">
                                @if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "en")
                                {
                                    <span>Language</span>
                                }
                                else if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "ar")
                                {
                                    <span>لغة</span>
                                }
                            </span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="row">
                                    <div class="col-md-12">
                                        @{
                                            if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "en")
                                            {
                                                <text>
                                                    <div class="col-md-2">
                                                        <span class="icon-check"></span>
                                                    </div>
                                                </text>
                                            }
                                            else
                                            {
                                                <text>
                                                    <div class="col-md-2">
                                                        <span>&nbsp;</span>
                                                    </div>
                                                </text>
                                            }
                                        }
                                        <div class="col-md-9">
                                            @Html.ActionLink("English", "ChangeCulture", "Home",
                                                  new { lang = "en", returnUrl = this.Request.RawUrl, area = "" }, null)
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="row">
                                    <div class="col-md-12">
                                        @{
                                            if (Cares.Web.Helper.CultureHelper.GetCurrentNeutralCulture() == "ar")
                                            {
                                                <text>
                                                    <div class="col-md-2">
                                                        <span class="icon-check"></span>
                                                    </div>
                                                </text>
                                            }
                                            else
                                            {
                                                <text>
                                                    <div class="col-md-2">
                                                        <span>&nbsp;</span>
                                                    </div>
                                                </text>
                                            }
                                        }
                                        <div class="col-md-9">
                                            @Html.ActionLink("العربية", "ChangeCulture", "Home",
                                                  new { lang = "ar", returnUrl = this.Request.RawUrl, area = "" }, null)
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <!-- END LANGUAGE DROPDOWN -->
                </ul>
            </div>
            <!-- END TOP NAVIGATION MENU -->
        </div>
    </div>

    <!-- END HEADER INNER -->

    <div class="clearfix">
    </div>
    <!-- END HEADER -->
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
        @if (@ViewBag.HideMenu == null || !@ViewBag.HideMenu)
        {
            <div class="page-sidebar-wrapper">
                <!-- DOC: Set data-auto-scroll="false" to disable the sidebar from auto scrolling/focusing -->
                <!-- DOC: Change data-auto-speed="200" to adjust the sub menu slide up/down speed -->
                <div class="page-sidebar float-left margin-right-minus-100 navbar-collapse collapse" style="min-height: 735px;">
                    <!-- BEGIN SIDEBAR MENU -->
                    <ul class="page-sidebar-menu page-sidebar-menu-closed" data-auto-scroll="true" data-slide-speed="200">
                        <!-- DOC: To remove the sidebar toggler from the sidebar you just need to completely remove the below "sidebar-toggler-wrapper" LI element -->
                        <li class="sidebar-toggler-wrapper">
                            <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
                            <div class="sidebar-toggler">
                            </div>
                            <!-- END SIDEBAR TOGGLER BUTTON -->
                        </li>
                        <!-- DOC: To remove the search box from the sidebar you just need to completely remove the below "sidebar-search-wrapper" LI element -->
                        <li class="sidebar-search-wrapper">
                            <!-- BEGIN RESPONSIVE QUICK SEARCH FORM -->
                            <!-- DOC: Apply "sidebar-search-bordered" class the below search form to have bordered search box -->
                            <!-- DOC: Apply "sidebar-search-bordered sidebar-search-solid" class the below search form to have bordered & solid search box -->
                            <br />
                            <!-- END RESPONSIVE QUICK SEARCH FORM -->
                        </li>
                        @Html.Action("LoadMenu", "Menu", new { area = "" })

                    </ul>
                    <!-- END SIDEBAR MENU -->
                </div>
            </div>
        }
        <!-- END SIDEBAR -->
        <!-- BEGIN QUICK SIDEBAR -->
        <a href="javascript:;" class="page-quick-sidebar-toggler"><i class="icon-close"></i></a>
        <div class="page-quick-sidebar-wrapper">
            <div class="page-quick-sidebar">
                <div class="nav-justified">
                    <ul class="nav nav-tabs nav-justified">
                        <li class="active">
                            <a href="#quick_sidebar_tab_1" data-toggle="tab">
                                Users <span class="badge badge-danger">2</span>
                            </a>
                        </li>
                        <li>
                            <a href="#quick_sidebar_tab_2" data-toggle="tab">
                                Alerts <span class="badge badge-success">7</span>
                            </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                More<i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu pull-right" role="menu">
                                <li>
                                    <a href="#quick_sidebar_tab_3" data-toggle="tab">
                                        <i class="icon-bell"></i> Alerts
                                    </a>
                                </li>
                                <li>
                                    <a href="#quick_sidebar_tab_3" data-toggle="tab">
                                        <i class="icon-info"></i> Notifications
                                    </a>
                                </li>
                                <li>
                                    <a href="#quick_sidebar_tab_3" data-toggle="tab">
                                        <i class="icon-speech"></i> Activities
                                    </a>
                                </li>
                                <li class="divider">
                                </li>
                                <li>
                                    <a href="#quick_sidebar_tab_3" data-toggle="tab">
                                        <i class="icon-settings"></i> Settings
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- END QUICK SIDEBAR -->
        <div class="page-content-wrapper">
            <div class="@(@ViewBag.FluidLayout != null && @ViewBag.FluidLayout ? "container-fluid" : "page-content margin-left-235")">
                @RenderBody()
                <div id="spinner">
                </div>
            </div>
        </div>
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN Footer -->
    @if (@ViewBag.HideFooter == null || @ViewBag.HideFooter == false)
    {
        <div class="page-footer">
            <div class="page-footer-inner">
                2015 © CaReS <span> | </span>
                <span style="color: #282275;"> InnoSTARK Technologies Pvt. Limited</span>
            </div>
            <div class="page-footer-tools">
                <span class="go-top">
                    <i class="fa fa-angle-up"></i>
                </span>
            </div>
        </div>
    }
    <!-- END Footer -->
    <script src="~/Scripts/quick-sidebar.js" type="text/javascript"></script>
    <script src="~/Scripts/metronic.js" type="text/javascript"></script>
    <script src="~/Scripts/layout.js" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core componets
            Layout.init(); // init layout

            QuickSidebar.init(); // init quick sidebar
            $('.innerSelected').closest('ul').closest('li').addClass('active')

            // Adjust Side Bar Menu Height with Page Height
            var bodyHeight = 0;
            setSideBarMeuHeight();

            // Adjust Side Bar Menu Height with Page Height
            function setSideBarMeuHeight() {
                if (bodyHeight !== $("body").height()) {
                    bodyHeight = $("body").height();
                    if (!$(".page-sidebar")[0]) {
                        return;
                    }
                    $(".page-sidebar")[0].style.minHeight = (bodyHeight - 10) + "px";
                }
            }
            // Scrollable menu items | Place it somewhere suitable
            $(".toActive").hover(function () {
                var id = this.id;
                if (id == "Reports") {
                    $('#Reports' + '-sub-menu').css("height", "100px");
                } else if (id == "Partners") {
                    $('#Partners' + '-sub-menu').css("height", "270px");
                } else if (id == "Pricing") {
                    $('#Pricing' + '-sub-menu').css("height", "300px");
                }
            });
            setTimeout(setSideBarMeuHeight, 1000);

        });
    </script>
    @RenderSection("scripts", required: false)
    @RenderSection("inlinescripts", required: false)

</body>
</html>
