
@using Cares.Models.IdentityModels.ViewModels
@model FRS.Models.IdentityModels.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/CSS/Pages/login.css">
<link href="~/Content/CSS/Global/componentsGlobal.css" rel="stylesheet" type="text/css" />
<link href="~/Content/CSS/Global/plugins.css" rel="stylesheet" type="text/css" />
<body class="login">
    <div class="content" style="margin-top: 10%">
        <section id="loginForm ">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))//form-horizontal
            {
                @Html.AntiForgeryToken()
                <h3 class="form-title">Login to your account</h3>
                <div>

                    <span>
                        @Html.ValidationSummary(true,"", new { @class = "alert alert-danger" } )
                    </span>
                </div>


                <div class="form-group">
                    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                    <label class="control-label visible-ie8 visible-ie9">Username</label>
                    <div class="input-icon">
                        <i class="fa fa-user"></i>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control placeholder-no-fix", placeholder = "Email", autocomplete = "off" })


                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Password</label>
                    <div class="input-icon">
                        <i class="fa fa-lock"></i>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control placeholder-no-fix", placeholder = "Password", autocomplete = "off" })


                    </div>
                </div>
                <div class="form-actions">
                    <label class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe) Remember me
                    </label>
                    <button type="submit" class="btn green pull-right">
                        Login <i class="m-icon-swapright m-icon-white"></i>
                    </button>
                </div>
                <div class="forget-password">
                    <h4>Forgot your password ?</h4>
                    <p>
                        No worries, click   @Html.ActionLink("here", "ForgotPassword")

                        to reset your password.
                    </p>
                </div>
                @*<div class="create-account">
                        <p>
                            Don't have an account yet ?&nbsp; @Html.ActionLink("Create an account ", "Register")

                        </p>
                    </div>*@


            }
        </section>
    </div>
    <script src="~/Scripts/App/Pages/login.js" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function() {
            Login.init();
        });
    </script>
</body>
