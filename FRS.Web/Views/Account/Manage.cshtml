@{
    ViewBag.Title = "Change Password";
}

@model  Cares.Models.IdentityModels.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";


}
@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3 class="page-title">
        Change Password
    </h3>

    <!-- BEGIN FORM-->
    <form action="#" class="form-horizontal">
        <div class="form-body">
            <div class="form-group">
                <label class="col-md-3 control-label">Old Password</label>
                <div class="col-md-4">
                    <div class="input-icon">
                        <i class="fa fa-key fa-fw"></i>
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control input-circle", placeholder = "Enter Old Password Here" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">New Password</label>
                <div class="col-md-4">
                    <div class="input-icon">
                        <i class="fa fa-lock"></i>
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-circle", placeholder = "Enter New Password Here" })
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Confirm New Password</label>
                <div class="col-md-4">
                    <div class="input-icon">
                        <i class="fa fa-lock"></i>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-circle", placeholder = "FConfirm New Password" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                </div>
            </div>
        </div>
    </form>
}
