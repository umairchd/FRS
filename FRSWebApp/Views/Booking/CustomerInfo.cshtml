                <div class="col-md-3">
                    @Html.EditorFor(model => model.LicenseNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LicenseNo, "", new { @class = "text-danger" })
                </div>
                <label class="control-label h5 col-sm-1">License Expiry Date </label>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.LicenseExpDt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LicenseExpDt, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label h5 col-sm-1">DOB </label>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                </div>
