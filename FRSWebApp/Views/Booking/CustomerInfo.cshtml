                <div class="col-md-3">
                    @Html.EditorFor(model => model.Sponser, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Sponser, "", new { @class = "text-danger" })
                </div>
                <label class="control-label h5 col-sm-1">Phone Numer </label>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.PhoneNumer, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumer, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label h5 col-sm-1">Mobile Numer </label>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.MobileNumer, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MobileNumer, "", new { @class = "text-danger" })
                </div>
